<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.CatchActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/pikachuIdEditText"
        android:hint="@string/hintTextPikachuId"
        android:layout_marginRight="24dp"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/catchDescriptionTextView"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCatchWithID"
        android:id="@+id/btnCatchWithID"
        android:layout_alignBottom="@+id/pikachuIdEditText"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/pikachuIdEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/catchDiscriptionText"
        android:id="@+id/catchDescriptionTextView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold" />
</RelativeLayout>
